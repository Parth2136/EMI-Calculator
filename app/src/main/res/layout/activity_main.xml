<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/amount_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Loan Ammount "
        android:textStyle="bold"
        android:inputType="number"
        android:textSize="20dp"
        android:layout_margin="10dp"
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/int_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Interest "
        android:textStyle="bold"
        android:inputType="numberDecimal"
        android:textSize="20dp"
        android:layout_margin="10dp"
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/month_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Duration of Month "
        android:textStyle="bold"
        android:inputType="number"
        android:textSize="20dp"
        android:layout_margin="10dp"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/emi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Calculate EMI "
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_margin="25dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/emi_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter EMI "
        android:textStyle="bold"
        android:inputType="numberDecimal"
        android:textSize="20dp"
        android:layout_margin="15dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/total_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Total Amount "
        android:textStyle="bold"
        android:inputType="numberDecimal"
        android:textSize="20dp"
        android:layout_margin="15dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/extra_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Extra Amount "
        android:textStyle="bold"
        android:inputType="numberDecimal"
        android:textSize="20dp"
        android:layout_margin="15dp"
        android:layout_gravity="center"/>

</LinearLayout>